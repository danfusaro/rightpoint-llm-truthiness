# Standard OpenAI Configuration
# Get your API key at https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Azure OpenAI Configuration
# Set to 'true' to use Azure OpenAI instead of standard OpenAI
USE_AZURE_OPENAI=false
# Your Azure OpenAI API key
AZURE_OPENAI_API_KEY=your_azure_api_key_here
# Your Azure OpenAI endpoint (e.g., https://oai-sds-dev1.openai.azure.com/openai/deployments/gpt-4o/chat/completions)
AZURE_OPENAI_ENDPOINT=your_azure_endpoint_here
# The deployment name in Azure (e.g., gpt-4o)
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o
# API version for Azure OpenAI
AZURE_OPENAI_API_VERSION=2025-01-01-preview

# General LLM Configuration
# Maximum number of tokens in the response
MAX_TOKENS=500
# Temperature controls randomness (0-1, lower is more deterministic)
TEMPERATURE=0.3
